mixin sForm()
	// start sForm
	+b.SECTION.sForm.section#sForm&attributes(attributes)
		+e.bg
			img(loading="lazy" src="img/svg/sForm-bg.svg" alt="")
		+e.container.container
			+e.row.row
				+e.form-col.col-12.col-lg-auto
					+b.section-title.text-center.text-md-start
						h2 Отправьте заявку и получите скидку 5% на все услуги
						p Выберите услуги и введите телефон — мы перезвоним вам
					+form-wrap
						+e.row.row
							+e.select-col.col-12.col-md-auto
								+customSlect('service', undefined, 'Выберите услуги')
							.col-12.col-md-auto
								+input('Введите телефон', 'tel')
							.col-12.col-md-auto
								+e.BUTTON.btn(type='button') Отправить заявку
				+e.man-col.col-auto.d-none.d-lg-block
					+e.man
						img(loading="lazy" src="img/@2x/man-img.png" alt="")
	// end sForm

mixin customSlect(selectName, optionsArr=['услуга 1', 'очень очень долгая услуга услуга 2', 'очень долгая услуга'], placeholder='', keyClass='custom-select-js')
	+b.custom-select
		select(name=selectName data-placeholder=placeholder class=keyClass)
			option(value="" label='#')
			- for (let item of optionsArr)
				option(value=item)=item